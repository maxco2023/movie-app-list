<!DOCTYPE html>
<html>
  <head>
    <title>MovieAppList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@100&display=swap" rel="stylesheet">
  </head>

  <body>

    <button class="burger" onclick="toggleMenu()"></button>
      <div class="menu">
        <nav>
          <div class="digit-nav" data-controller="digitals"></div>
          <%= link_to "Home", root_path, style:"animation-delay: 0.2s" %>
          <%= link_to "Lists", lists_path, style:"animation-delay: 0.3s" %>
          <%= link_to "Dev", test_path, style:"animation-delay: 0.4s" %>
          <%= link_to "Create a list", new_list_path, style:"animation-delay: 0.5s" %>
        </nav>
      </div>
    <script type="text/javascript">
      const toggleMenu = () => document.body.classList.toggle("open");
    </script>

    <%= yield %>

    <%= render "shared/footer" %>
  </body>
</html>
