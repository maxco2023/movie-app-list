<div class="container-bookmark">
  <div class="bookmark-title">
    <h1><%= @list.name %></h1>
    <%#= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
  </div>
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" width="200" />
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
            </div>
            <h2 class="card-trip-pricing"><%= link_to "Modify", edit_list_bookmark_path(@list, bookmark) %> <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h2>
          </div>
        </div>
      <% end %>
    </div>
    <div class="cards">
        <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment%>
        <%= f.button :submit, "Add a movie", class: "btn-primary" %>
    <% end %>
      </div>
  <%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-warning" %>
</div>
