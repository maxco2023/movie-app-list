<div class="container-home" data-controller="background">
  <div class="banner" style="background-image: url(<%= asset_path('banner.jpg') %>);">
    <div class="container">
      <%# <p><span data-controller="typed-js"></span></p> %>
        <h1 class="title" style="--duration: 1s">
			    <span style="--delay: 0.5s">Discover the best movie app</span>
			    <span style="--delay: 1.1s">of the French Tech !</span>
		    </h1>
    </div>
  </div>

  <div class="container">

    <h1>Lists</h1>
    <div class="cards">
      <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <% if list.photo.attached? %>
              <div class="card-category" style="background-image: url(<%= cl_image_path list.photo.key, width: 100, height: 100, crop: :fill %>)">
            <% else %>
              <div class="card-category" style="background-image: url()">
            <% end %>
            <%= list.name %>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
