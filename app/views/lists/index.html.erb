<div class="container">
  <h1>Lists</h1>
  <% @lists.each do |list| %>
    <div>
      <%= link_to list_path(list) do %>
        <%= list.id %> | <%= list.name %>
      <% end %>
      <%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning" %>
    </div>
  <% end %>
</div>

<%= link_to "Add a list", new_list_path, class:"btn btn-secondary" %>
